generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Note {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text    // For markdown content
  userId    String   // Clerk user ID
  folderId   String
  group     Folder   @relation(fields: [folderId], references: [id], onDelete: Cascade)
  starred   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Folder {
  id          String   @id @default(cuid())
  name        String
  userId      String   // Clerk user ID
  notes       Note[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}